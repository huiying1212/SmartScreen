<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/launcher_background"
    android:padding="8dp">

    <!-- 左上角小按钮区域 -->
    <LinearLayout
        android:id="@+id/top_left_controls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:orientation="horizontal"
        android:padding="4dp">

        <ImageButton
            android:id="@+id/settings_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_margin="2dp"
            android:background="@drawable/launcher_small_button_bg"
            android:src="@android:drawable/ic_menu_preferences"
            android:scaleType="fitCenter"
            android:padding="6dp" />

        <ImageButton
            android:id="@+id/exit_launcher_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_margin="2dp"
            android:background="@drawable/launcher_small_exit_button_bg"
            android:src="@android:drawable/ic_menu_revert"
            android:scaleType="fitCenter"
            android:padding="6dp" />

    </LinearLayout>

    <!-- 底部：四个可自定义的App快捷方式 -->
    <LinearLayout
        android:id="@+id/bottom_apps_section"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:background="@color/launcher_bottom_bar"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp">

        <LinearLayout
            android:id="@+id/app_shortcut_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/app_item_bg"
            android:clickable="true"
            android:padding="4dp">

            <ImageView
                android:id="@+id/app_icon_1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_menu_gallery"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/app_name_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="应用1"
                android:textColor="@color/launcher_text_primary"
                android:textSize="10sp"
                android:maxLines="1"
                android:ellipsize="end" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/app_shortcut_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/app_item_bg"
            android:clickable="true"
            android:padding="4dp">

            <ImageView
                android:id="@+id/app_icon_2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_menu_camera"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/app_name_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="应用2"
                android:textColor="@color/launcher_text_primary"
                android:textSize="10sp"
                android:maxLines="1"
                android:ellipsize="end" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/app_shortcut_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/app_item_bg"
            android:clickable="true"
            android:padding="4dp">

            <ImageView
                android:id="@+id/app_icon_3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_menu_call"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/app_name_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="应用3"
                android:textColor="@color/launcher_text_primary"
                android:textSize="10sp"
                android:maxLines="1"
                android:ellipsize="end" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/app_shortcut_4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/app_item_bg"
            android:clickable="true"
            android:padding="4dp">

            <ImageView
                android:id="@+id/app_icon_4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_menu_preferences"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/app_name_4"
            android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="应用4"
                android:textColor="@color/launcher_text_primary"
                android:textSize="10sp"
                android:maxLines="1"
                android:ellipsize="end" />

        </LinearLayout>

    </LinearLayout>

    <!-- 顶部：DeepSeek API结果显示区 -->
    <LinearLayout
        android:id="@+id/deepseek_section"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_below="@id/top_left_controls"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/launcher_deepseek_bg"
        android:orientation="vertical"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="AI智能助手"
            android:textColor="@color/launcher_text_primary"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/deepseek_result_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="点击刷新获取AI智能通知..."
                android:textColor="@color/launcher_text_secondary"
                android:textSize="12sp"
                android:lineSpacingExtra="2dp" />

        </ScrollView>

    </LinearLayout>

    <!-- 中间：智能建议Widgets区域 -->
    <ScrollView
        android:id="@+id/widgets_section"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/deepseek_section"
        android:layout_above="@id/bottom_apps_section"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/launcher_widgets_bg"
        android:padding="12dp">

        <LinearLayout
            android:id="@+id/widgets_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="智能建议"
                android:textColor="@color/launcher_text_primary"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <!-- 动态添加的widget建议将在这里显示 -->
            <LinearLayout
                android:id="@+id/dynamic_widgets_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- 默认提示文本 -->
                <TextView
                    android:id="@+id/widgets_placeholder_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="等待AI分析后显示智能建议..."
                    android:textColor="@color/launcher_text_secondary"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:padding="16dp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout> 