<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/launcher_background"
    android:padding="8dp">

    <!-- 标题栏 -->
    <LinearLayout
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/launcher_top_bar"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="12dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="所有应用"
            android:textColor="@color/launcher_text_primary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/launcher_small_button_bg"
            android:text="返回"
            android:textColor="@color/launcher_text_primary"
            android:textSize="12sp"
            android:padding="8dp"
            android:onClick="finish" />

    </LinearLayout>

    <!-- 应用网格 -->
    <GridView
        android:id="@+id/apps_grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_bar"
        android:layout_margin="8dp"
        android:numColumns="4"
        android:verticalSpacing="16dp"
        android:horizontalSpacing="8dp"
        android:stretchMode="columnWidth"
        android:gravity="center" />

</RelativeLayout> 