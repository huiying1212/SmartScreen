<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/app_item_bg"
    android:padding="12dp"
    android:layout_marginBottom="8dp"
    android:clickable="true"
    android:focusable="true">

    <!-- App图标 -->
    <ImageView
        android:id="@+id/widget_app_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@android:drawable/ic_menu_gallery"
        android:scaleType="fitCenter"
        android:layout_marginEnd="12dp" />

    <!-- 文本内容 -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- App名称 -->
        <TextView
            android:id="@+id/widget_app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="App Name"
            android:textColor="@color/launcher_text_primary"
            android:textSize="14sp"
            android:textStyle="bold" />

        <!-- 建议动作 -->
        <TextView
            android:id="@+id/widget_action_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Suggested action description"
            android:textColor="@color/launcher_text_secondary"
            android:textSize="12sp"
            android:layout_marginTop="2dp"
            android:lineSpacingExtra="1dp" />

    </LinearLayout>

    <!-- 箭头图标 -->
    <ImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@android:drawable/ic_menu_more"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="8dp" />

</LinearLayout> 